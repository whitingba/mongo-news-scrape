<div class="row">
    <div class="col col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Article</th>
                    <th scope="col">Link to Article</th>
                    <th scope="col">Save Article</th>
                </tr>
            </thead>
            <tbody>
                {{#each articles}}

                <tr class="articleRow">
                    <td>{{this.title}}</td>
                    <td><a class="btn btn-success links" href='https://www.sciencedaily.com{{this.link}}'
                            target=" _blank" role="button">Article Link</a></td>

                    <td>
                        <form action="/update" method="PUT" id="save-article">
                            <input type="hidden" name="id" value={{this._id}}>
                            <button class="btn btn-success save" type="submit">Save Article</button>
                        </form>
                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>
    </div>
</div>